@using HotelDbProject.ViewModels

@model ClienteCreateViewModel
@{
    ViewBag.Title = "Aggiungi Cliente";
}

<section>
    <div>
        <form asp-controller="Cliente" asp-action="CreateSave" method="post">
            <div class="card shadow-sm p-4 mt-3">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Nome Cliente" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Cognome" class="form-label"></label>
                    <input asp-for="Cognome" class="form-control" placeholder="Cognome Cliente" />
                    <span asp-validation-for="Cognome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email Cliente" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="Telefono Cliente" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">Salva</button>
                    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
                </div>
            </div>
        </form>
    </div>
</section>
