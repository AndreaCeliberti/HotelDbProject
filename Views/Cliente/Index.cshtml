@using HotelDbProject.ViewModels
@model List<ClienteViewModel>
@{
    ViewData["Title"] = "Lista Clienti";
}
<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>CLienteId</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.ClienteId</td>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Cognome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefono</td>
                    <td>
                        <button class="btn btn-warning btn-sm"
                                onclick="openEditModal('@cliente.ClienteId')">
                            Edit
                        </button>

                        <button class="btn btn-danger btn-sm"
                                onclick="openDeleteModal('@cliente.ClienteId')">
                            Delete
                        </button>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body" id="editModalContent"></div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="deleteModalContent"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(id) {
            $.get("/Cliente/Edit?id=" + id, function (data) {
                $("#editModalContent").html(data);
                $("#editModal").modal('show');
            });
        }

        function openDeleteModal(id) {
            $.get("/Cliente/Delete?id=" + id, function (data) {
                $("#deleteModalContent").html(data);
                $("#deleteModal").modal('show');
            });
        }
    </script>
}


