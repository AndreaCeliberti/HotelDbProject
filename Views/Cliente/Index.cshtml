@using HotelDbProject.ViewModels
@model List<ClienteViewModel>
@{
    ViewData["Title"] = "Lista Clienti";
}
<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>CLienteId</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Email</th>
            <th>Telefono</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.ClienteId</td>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Cognome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefono</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@cliente.ClienteId" class="btn btn-primary">Modifica</a>
                        <a asp-action="Delete" asp-route-id="@cliente.ClienteId" class="btn btn-danger">Elimina</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

